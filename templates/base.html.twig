<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport"
              content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>{% block title %}Series !{% endblock %}</title>
        <!-- 3 liens google fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Crimson+Text:ital,wght@0,400;0,600;0,700;1,400;1,600;1,700&
            family=Pixelify+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
        <!-- fichier CSS à DL qui gomme les différences entre les différents navigateurs -->
        <link rel="stylesheet" href="{{ asset('css/normalize.css') }}">
        <!-- bootstrap -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
        <!-- mon fichier CSS (prio) -->
        <link rel="stylesheet" href="{{ asset('css/app.css') }}">
        <!-- favicon -->
        <link rel="icon" href="{{ asset('img/icon.png') }}">

    </head>
    <body>
        <div class="container">
            <header>
                <h1><a href="{{ path('main_home') }}"><img src="{{ asset('img/logo.svg') }}" alt="Series !"></a></h1>
                {% include('main/inc/nav.html.twig') %}
            </header>

            {# Read and display all flash messages #}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="flash flash-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            <main>
                {% block body %}{% endblock %}
            </main>
            <footer>
                {% include('main/inc/nav.html.twig') %}
                <div>&copy; {{ "now"|date("Y") }} Series !</div>
            </footer>
        </div>
        <!-- bootstrap (JavaScript) -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
